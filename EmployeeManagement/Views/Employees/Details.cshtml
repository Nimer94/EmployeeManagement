                                </div>
                                <div class="card-body" style="max-height:750px;overflow-y:scroll">
                                    <div class="row no-gutters">
                                        <div class="col-md-12">
                                            @foreach (var add in Model.EmployeeContacts)
                                            {
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5 class="card-title mb-0">
                                                            @add.ContactType.ToString()
